<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.mimismart.web.screens.order_from_supplier">
    <data>
        <instance id="order_from_supplierDc"
                  class="com.company.mimismart.entity.Order_from_supplier"
                  view="order_with_supplier_and_status">
            <loader entityId="" id=""/>
            <collection id="order_from_supplierOrderlinesesDc" property="orderlines">
            </collection>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="order_from_supplierDc">
            <column width="250px">
                <pickerField id="supplierField" property="supplier" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="open" openType="DIALOG" type="picker_open"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="order_numField" property="order_num"/>
                <dateField id="dateField" property="date"/>
                <textField id="nameField" property="name"/>
                <pickerField id="statusField" property="status" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <groupTable id="order_from_supplierNomenklaturesTable" height="400px" width="100%" dataContainer="order_from_supplierOrderlinesesDc"
                    editable="true">
            <columns>
                <column id="nomenklatura" caption="msg://Name"/>
                <column id="nomenklatura.unit.name" caption="msg://Units"/>
                <column id="quantity" caption="msg://Qty"/>
                <column id="qtyfact" caption="msg://Qty-fact"/>
                <column id="nomenklatura.description"/>
            </columns>
            <actions>
                <action type="create" id="create"/>
                <action type="edit" id="edit"/>
                <action type="remove" id="remove"/>
            </actions>
            <buttonsPanel>
                <button id="createButton" action="order_from_supplierNomenklaturesTable.create"/>
                <button id="editButton" action="order_from_supplierNomenklaturesTable.edit"/>
                <button id="removeButton" action="order_from_supplierNomenklaturesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
